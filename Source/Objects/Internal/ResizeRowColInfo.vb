Option Strict On
Option Explicit On 

Namespace Gravitybox.Objects

  'This class will store the necessary information for row/column resizing
  Friend Class ResizeRowColInfo

#Region "Class Members"

    Friend Enum ResizeInfoDirection
      Column = 0
      Row = 1
    End Enum

    Friend IsResizing As Boolean = False
    Friend ResizeCor As Integer = 0
    Friend ResizeDirection As ResizeInfoDirection = ResizeInfoDirection.Column
    Friend OriginalCor As Integer = 0

    Friend StartDate As DateTime
    Friend StartTime As DateTime
    Friend Length As Integer

#End Region

    Friend Function GetDateTime(ByVal startDate As Date, ByVal startTime As Date) As Date
      Return New DateTime(startDate.Year, startDate.Month, startDate.Day, startTime.Hour, startTime.Minute, 0)
    End Function

    Friend Function GetDateTime() As Date
      Return GetDateTime(StartDate, StartTime)
    End Function

  End Class

End Namespace
